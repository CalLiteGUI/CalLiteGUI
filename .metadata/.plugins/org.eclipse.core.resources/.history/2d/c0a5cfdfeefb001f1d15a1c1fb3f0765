	//React to check box selections.
	public void itemStateChanged(ItemEvent e) {
	    //int index = 0;
	    //char c = '-';
	    Object source = e.getItemSelectable();

	    if (source == ckb1) {
	      rdb1.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      //btnEdit1.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	    } else if (source == ckb2) {
	  	  rdb2.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
		  //btnEdit2.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	    } else if (source == ckb3) {
	  	  rdb3.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	  	  rdb4.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	  	  rdb5.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
		  //btnEdit3.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	    } else if (source == ckb4) {
	      rdb6.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb7.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb8.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      //btnEdit4.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	    } else if (source == ckb5) {
	      rdb9.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb10.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb11.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      //btnEdit5.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == ckb6) {
	      rdb12.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb13.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb14.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	  	  //btnEdit6.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == ckb7) {
	      rdb15.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb16.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb17.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      //btnEdit7.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == ckb8) {
	      rdb18.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb19.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      rdb20.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      //btnEdit8.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == ckb9) {
	      rdb21.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      //btnEdit9.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == ckb10) {
	      rdb22.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      //btnEdit10.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      
	      } else if (source == rdb1) {
	      btnEdit1.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb2) {
	          btnEdit2.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb3) {
	          btnEdit3.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb6) {
	          btnEdit4.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb9) {
	          btnEdit5.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb12) {
	          btnEdit6.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb15) {
	          btnEdit7.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb18) {
	          btnEdit8.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb21) {
	          btnEdit9.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	      } else if (source == rdb22) {
	          btnEdit10.setEnabled((e.getStateChange() == ItemEvent.SELECTED));
	    }
	}

